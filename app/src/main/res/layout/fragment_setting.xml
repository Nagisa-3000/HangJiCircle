<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- 标题栏 -->
    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_dynamic_neutral_variant70">

        <!-- 标题文本 -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人主页"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <!-- 左侧按钮 -->
        <Button
            android:id="@+id/left_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:text="退出账号" />

        <!-- 右侧按钮1 -->
        <Button
            android:id="@+id/right_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:text="筛选" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/personal_avatar"
            android:layout_margin="30dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/head"
            android:scaleType="centerCrop"/>
        <Button
            android:id="@+id/personal_nickname"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:text="B612星人"
            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:textSize="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="40dp">
        <Button
            android:id="@+id/personal_signature"
            android:layout_margin="20dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:text="这个人很懒，什么也没有留下"
            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/personal_click"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="点击量：0"
            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/personal_like"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="点赞量：0"
            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/personal_post"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="我发布的"
            android:textColor="@color/black"
            android:background="@drawable/button_background"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/shopping_cart"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="购物心愿单"
            android:textColor="@color/black"
            android:background="@drawable/button_background"
            android:textSize="20dp"/>
    </LinearLayout>

</LinearLayout>