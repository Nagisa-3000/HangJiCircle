<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 标题栏 -->
    <RelativeLayout
        android:id="@+id/title_bar_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_dynamic_neutral_variant70"
        android:elevation="4dp">

        <!-- 标题文本 -->
        <TextView
            android:id="@+id/title_text_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商品详情"
            android:textColor="#000"
            android:textSize="20sp" />

        <!-- 返回按钮 -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="?attr/selectableItemBackground"
            android:text="返回" />
    </RelativeLayout>

    <!-- 商品详情 -->
    <ScrollView
        android:id="@+id/scroll_view_post_content"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/title_bar_detail"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp">

            <!-- 商品图片 -->
            <LinearLayout
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:orientation="horizontal" />

            <!-- 商品名称 -->
            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名称"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <!-- 商品价格 -->
            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥9.9"
                android:textSize="18sp"
                android:layout_marginTop="8dp"/>

            <!-- 商品描述 -->
            <TextView
                android:id="@+id/product_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宿舍小锅9999w,只要9.9，新北13公寓交货。"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- 想买 -->
    <LinearLayout
        android:id="@+id/want_the_commodity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scroll_view_post_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/want_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_add_shopping_cart_24"
            android:clickable="true"
            android:focusable="true" />
        <TextView
            android:id="@+id/want_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- 评论列表 -->

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout_goods"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/want_the_commodity">
        <ListView
            android:id="@+id/comments_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/want_the_commodity"
            android:layout_above="@id/comment_input_section" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <!-- 评论输入区 -->
    <LinearLayout
        android:id="@+id/comment_input_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#EEE">

        <!-- 输入框 -->
        <EditText
            android:id="@+id/comment_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入评论..."
            android:background="@android:drawable/edit_text" />

        <!-- 发送按钮 -->
        <Button
            android:id="@+id/send_comment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送" />
    </LinearLayout>

</RelativeLayout>